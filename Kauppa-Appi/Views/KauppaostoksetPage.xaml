<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kauppa_Appi.KauppaostoksetPage"
             Title="Kauppa-Appi - Kauppaostokset">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="AliceBlue" Padding="16">
                <Label Text="Kauppa-Appi"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="Blue"
               HorizontalTextAlignment="Center"
               HorizontalOptions="CenterAndExpand"/>
            </Frame>
            <ImageButton Source="info.png"
                         BackgroundColor="Transparent"
                         WidthRequest="35"
                         HeightRequest="35"
                         HorizontalOptions="End"
                         VerticalOptions="EndAndExpand"
                         Aspect="AspectFit"
                         Clicked="ImageButton_Clicked"/>


            <Button x:Name="startbutton" Text="Merkitse tuote ostettavaksi" Clicked="startbutton_Clicked"></Button>
            <Button x:Name="Lisaa" Text="Lisää tuotteita kauppalistalle" Clicked="Lisaa_Clicked"/>

            <Label x:Name="ko_lataus" />
            
            <!--Kauppaostoslistaus-->

            <ListView x:Name="koList" SelectionMode="Single"
                Margin="25, 0" BackgroundColor="Azure">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Title}" Detail="{Binding Description}" TextColor="DarkBlue"/>
                        
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


            <Label x:Name="lat_label"></Label>
            <Label x:Name="lon_label"></Label>

            <StackLayout Orientation="Horizontal">

                <StackLayout Orientation="Horizontal">


                    <Button x:Name="ostobutton" Text="Merkitse ostetuksi" Clicked="ostobutton_Clicked"></Button>
                    <Button x:Name="poistobutton" Text="Poista" TextColor="Red" Clicked="Poistobutton_Clicked"></Button>
                    <Button x:Name="Muokkausbutton" Text="Muokkaa" TextColor="Green" Clicked="Muokkausbutton_Clicked"></Button>
                </StackLayout>
            </StackLayout>
            <Frame BackgroundColor="AliceBlue" Padding="16" CornerRadius="0">
                <Label Text="♥ made by Sonja" HorizontalTextAlignment="Center" TextColor="Gray" FontSize="14"/>
            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>